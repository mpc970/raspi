# {{ ansible_managed }}
---
version: "3"

# More info at https://www.home-assistant.io/installation/raspberrypi#docker-compose 
services:
  home-assistant:
    container_name: home-assistant
    image: ghcr.io/home-assistant/home-assistant:stable
    volumes:
      - './home-assisant/config:/config'
      - './etc/localtime:/etc/localtime:ro'
    restart: unless-stopped
    privileged: true
    network_mode: host
